<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/regishome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".HomepageActivity">

    <TextView
        android:id="@+id/txt_regishomet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Homepage"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_welname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Username"
        android:textSize="20dp"
        android:layout_marginTop="200dp"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_welmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your email has been activated"
        android:textSize="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_welname" />
    <TextView
        android:id="@+id/txt_welphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your phone has been registered"
        android:textSize="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_welmail" />


</androidx.constraintlayout.widget.ConstraintLayout>